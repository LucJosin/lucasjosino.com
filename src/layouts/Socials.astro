---
import LinkBox from '@components/LinkBox.astro';
import Title from '@components/Title.astro';
import { social } from '@constants/linkBox';
import { socials } from 'data/socials';
---

<div class="socials">
  <Title title="Socials" fontSize="1.3em" />
  <div class="socials-container">
    {
      socials.map((data) => (
        <LinkBox
          height={social.height}
          width={social.width}
          link={data.url}
          icon={data.icon}
          iconSize="24"
          alt={data.alt}
        />
      ))
    }
  </div>
</div>

<style>
  .socials {
    height: fit-content;
    width: 80%;
  }

  .socials-container {
    display: flex;
    justify-content: space-between;
  }
</style>
