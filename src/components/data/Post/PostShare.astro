---
import LinkBox from '@components/core/Link/LinkBox.astro';
import Tooltip from '@components/core/Tooltip.astro';

interface PostShareItem {
  href: string;
  icon: string;
  alt: string;
  id?: string;
  messageId?: string;
  event?: string;
}

interface Props {
  items: PostShareItem[];
  margin?: string;
}

const { items, margin } = Astro.props;
---

<div class="post-share">
  {
    items.map((item) => {
      return (
        <Tooltip
          message={item.alt}
          id={item.id}
          messageId={item.messageId}
          href={item.href}
        >
          <LinkBox
            href={item.href}
            alt={item.alt}
            icon={item.icon}
            iconSize="1em"
            padding="0.6rem 0.8rem"
            isLocal={false}
            event={item.event}
          />
        </Tooltip>
      );
    })
  }
</div>

<style define:vars={{ margin }}>
  .post-share {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 1rem;
    margin: var(--margin);
  }
</style>
