---
import LinkBox from '@components/core/Link/LinkBox.astro';
import { links } from '@constants/links';
---

<div class="links">
  {
    links.map((data) => (
      <LinkBox
        href={data.url}
        icon={data.icon}
        iconSize="18"
        title={data.name}
        alt={data.alt}
        isLocal={false}
      />
    ))
  }
</div>

<style>
  .links {
    width: 80%;
    display: grid;
    gap: 1rem;
    grid-template-columns: repeat(auto-fit, minmax(8rem, 1fr));
  }
</style>
