---
import LinkBox from '@components/core/LinkBox.astro';
import Title from '@components/core/Title.astro';
import { socials } from '@constants/socials';
---

<div class="socials">
  <Title title="Socials" fontSize="1.3em" />
  <div class="socials-container">
    {
      socials.map((data) => (
        <LinkBox
          height="var(--social-lb-height)"
          width="var(--social-lb-width)"
          link={data.url}
          icon={data.icon}
          iconSize="24"
          alt={data.alt}
        />
      ))
    }
  </div>
</div>

<style>
  .socials {
    height: fit-content;
    width: 80%;
  }

  .socials-container {
    display: flex;
    justify-content: space-between;
  }

  @media (max-width: 415px) {
    .socials {
      text-align: center;
      height: max-content;
    }

    .socials-container {
      display: grid;
      gap: 1rem;
      grid-template-columns: auto auto;
      justify-content: center;
      align-items: center;
      flex-direction: column;
    }
  }
</style>
