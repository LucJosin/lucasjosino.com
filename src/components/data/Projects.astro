---
import Link from '@components/core/Link/Link.astro';
import ProjectCard from '@components/core/Project/ProjectCard.astro';
import SubTitle from '@components/core/SubTitle.astro';
import { projects } from '@constants/projects';
---

<section class="projects-section">
  <div class="projects-header">
    <SubTitle title="Projects" />
    <Link
      href="/projects/"
      alt="See more projects"
      title="See more"
      icon="mdi:arrow-right"
      iconSide="right"
      hasBorderBottom={false}
      animatedIcon
      event=`Projects (${Astro.url.pathname})`
    />
  </div>

  <div class="projects-container">
    {projects.slice(0, 2).map((data) => <ProjectCard project={data} />)}
  </div>
</section>

<style>
  .projects-section {
    height: max-content;
    width: 100%;
  }

  .projects-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .projects-container {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
</style>
