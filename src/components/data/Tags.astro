---
import Tag from '@components/core/Tag.astro';

interface Props {
  tags: string[];
}

const { tags } = Astro.props;
---

<div class="tags">
  {
    tags.map((item) => {
      return <Tag>{item}</Tag>;
    })
  }
</div>

<style>
  .tags {
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    gap: 0.5rem;
    font-size: 0.9em;
  }
</style>
