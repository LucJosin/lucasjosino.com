---
import Tag from '@components/core/Tag.astro';
import { getPostLength } from '@lib/blog';
import { useLocale } from 'i18n';

interface Props {
  values: string[];
  target: string;
  title?: string;
  showLength?: boolean;
  id?: string;
  center?: boolean;
  active?: boolean;
}

const { localizePath, t, interpolate } = useLocale(Astro.url.pathname);

const {
  title,
  target,
  values,
  id,
  center = false,
  showLength = false,
  active = false,
} = Astro.props;
const justifyContent = center ? 'center' : 'initial';
---

<div id={id}>
  {title && <h2>{title}</h2>}
  <div class="tags-list">
    {
      values.map(async (tag) => {
        const filteredPosts = showLength
          ? await getPostLength(tag, target)
          : null;
        return (
          <Tag
            value={tag + (filteredPosts ? ` (${filteredPosts})` : '')}
            href={localizePath(`/blog/${target}/${tag}`)}
            active={active}
            title={interpolate(t.post.tags_see_more_alt, { tag })}
          />
        );
      })
    }
  </div>
</div>

<style define:vars={{ justifyContent }}>
  .tags-list {
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    justify-content: var(--justifyContent);
    gap: 0.5rem;
    font-size: 0.9em;
  }
</style>
