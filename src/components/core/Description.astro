---
interface Props {
  value: string;
  width?: string;
  margin?: string;
  fontSize?: string;
  maxLine?: string;
  align?: boolean;
}

const {
  value,
  margin = '1rem 0',
  width = '100%',
  fontSize = '1em',
  maxLine,
  align = true,
} = Astro.props as Props;

const textAlign = align ? 'center' : 'initial';
---

<p class="description-container">
  {value}
</p>

<style define:vars={{ width, margin, fontSize, maxLine, textAlign }}>
  .description-container {
    overflow: hidden;
    width: var(--width);
    display: -webkit-box;
    -webkit-line-clamp: var(--maxLine);
    -webkit-box-orient: vertical;
    margin: var(--margin);
    font-size: var(--fontSize);
    text-align: var(--textAlign);
    color: var(--description-text-color);
  }
</style>
