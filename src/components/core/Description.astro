---
interface Props {
  value: string;
  margin?: string;
  fontSize?: string;
  maxLine?: string;
}

const {
  value,
  margin = '1rem 0',
  fontSize = '0.8em',
  maxLine,
} = Astro.props as Props;
---

<p class="description">
  {value}
</p>

<style define:vars={{ margin, fontSize, maxLine }}>
  .description {
    overflow: hidden;
    width: 100%;
    display: -webkit-box;
    -webkit-line-clamp: var(--maxLine);
    -webkit-box-orient: vertical;
    margin: var(--margin);
    font-size: var(--fontSize);
  }
</style>
