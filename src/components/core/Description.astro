---
interface Props {
  value: string;
  width: string;
  margin?: string;
  fontSize?: string;
}

const {
  value,
  width,
  margin = '1rem 0',
  fontSize = '0.8em',
} = Astro.props as Props;
---

<div class="description">
  {value}
</div>

<style define:vars={{ margin, fontSize, width }}>
  .description {
    overflow: hidden;
    width: var(--width);
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    margin: var(--margin);
    font-size: var(--fontSize);
  }
</style>
