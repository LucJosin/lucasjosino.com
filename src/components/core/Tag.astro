---
interface Props {
  href: string;
  value: string;
}

const { href, value } = Astro.props;
---

<a href={href} class="tag">
  {value}
</a>

<style>
  .tag {
    padding: 0.4rem;
    border-radius: var(--border-radius);
    border: var(--border-size) solid var(--border-color);
    transition: all 0.2s;
    white-space: nowrap;
  }

  .tag:hover {
    border: var(--border-size) solid var(--primary-color);
    background-color: var(--border-color);
    color: var(--primary-color);
    cursor: pointer;
  }
</style>
