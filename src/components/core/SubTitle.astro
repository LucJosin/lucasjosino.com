---
interface Props {
  title?: string;
  margin?: string;
  fontSize?: string;
  textTransform?: string;
  display?: string;
}

const {
  title,
  margin = '1rem 0',
  fontSize = '1.4em',
  display = 'initial',
  textTransform,
} = Astro.props as Props;
---

{title ? <h3 class="sub-title">{title}</h3> : <slot />}

<style define:vars={{ margin, fontSize, textTransform, display }}>
  .sub-title {
    margin: var(--margin);
    font-weight: bold;
    font-size: var(--fontSize);
    display: var(--display);
    text-transform: var(--textTransform);
  }
</style>
