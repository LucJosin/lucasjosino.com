<div class="avatar">
  <span class="img"></span>
  <img
    src="https://emoji.gg/assets/emoji/7279-vibecat.gif"
    width="34"
    class="placeholder"
    title="Vibecat gif"
  />
</div>

<style>
  .avatar {
    height: 5rem;
    width: 5rem;
    background-color: var(--primary-color);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .img {
    height: inherit;
    width: inherit;
    border-radius: inherit;
    background: url('https://avatars.githubusercontent.com/u/76869974?v=4')
      no-repeat center;
    background-size: cover;
    cursor: help;
  }

  .placeholder {
    height: 3rem;
    width: 3rem;
    position: absolute;
    visibility: hidden;
  }
</style>

<script>
  const avatar = document.querySelector('.img') as HTMLInputElement;
  const placeholder = document.querySelector(
    '.placeholder'
  ) as HTMLInputElement;
  avatar?.addEventListener('click', () => {
    avatar.style.visibility = 'hidden';
    placeholder.style.visibility = 'visible';
  });
</script>
