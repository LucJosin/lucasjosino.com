---
import { getAbsoluteLocaleUrl } from 'astro:i18n';
import type { LocaleSlug } from 'i18n/types';

interface Props {
  locales?: LocaleSlug[];
}

const { locales = [] } = Astro.props as Props;
---

{
  locales.map(({ locale, slug }) => (
    <link
      rel="alternate"
      hreflang={locale}
      href={getAbsoluteLocaleUrl(locale, slug)}
    />
  ))
}
