---
import { getFormatedDate } from '@lib/date';
import Link from '../Link/Link.astro';

interface Props {
  id: string;
  updatedAt: string;
}

const { id, updatedAt } = Astro.props;
const GIT_REF = `https://github.com/LucJosin/lucasjosino.com/commits/main/src/content/blog/${id}`;
---

<div class="post-updated-at">
  <i class="post-updated-at-content">
    Last modified:
    <Link
      href={GIT_REF}
      alt="See post history"
      title={getFormatedDate(updatedAt, true)}
      isLocal={false}
    />
  </i>
</div>

<style>
  .post-updated-at {
    width: 100%;
    margin: 0 0 1rem 0;
    display: flex;
    gap: 0.2rem;
    text-align: center;
  }

  .post-updated-at-content {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    justify-content: center;
  }
</style>
