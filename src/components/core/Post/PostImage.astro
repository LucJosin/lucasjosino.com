---
interface Props {
  src: string;
  title: string;
}

const { src, title } = Astro.props;
---

<img src={src} alt={`Post - ${title}`} class="post-banner" />

<style>
  .post-banner {
    height: fit-content;
    width: 100%;
    border-radius: var(--border-radius);
    margin: 0 0 1rem 0;
    aspect-ratio: 16 / 9;
  }
</style>
