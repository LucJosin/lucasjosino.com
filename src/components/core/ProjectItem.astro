---
import Description from './Description.astro';
import Divider from './Divider.astro';
import LinkIcon from './LinkIcon.astro';
import Title from './Title.astro';

interface Props {
  title: string;
  description: string;
  url?: string;
  git: string;
}

const { title, description, url, git } = Astro.props as Props;
---

<div class="project-item">
  <div class="item-header">
    <Title title={title} fontSize="1em" />
    <div class="item-links">
      <LinkIcon git={git} alt={title + ' - Github'} iconSize="20" />
      {url && <LinkIcon url={url} alt={title + ' - Demo'} iconSize="22" />}
    </div>
  </div>
  <Divider width="100%" margin="0 0" />
  <Description value={description} width="100%" />
</div>

<style>
  .project-item {
    border: var(--border-size) solid var(--border-color);
    border-radius: var(--border-radius);
    box-sizing: border-box;
    padding: 0.2rem 0.7rem;
    transition: all var(--transition-duration);
  }

  .item-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .item-links {
    display: flex;
    gap: 0.5rem;
  }
</style>
