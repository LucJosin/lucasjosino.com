---
interface Props {
  height?: string;
  width?: string;
  margin?: string;
}
let { margin, height, width } = Astro.props as Props;

margin = margin ?? '1.5rem 0';
height = height ?? '1px';
width = width ?? '1rem';
---

<div class="divider"></div>

<style define:vars={{ height, width, margin }}>
  .divider {
    margin: var(--margin);
    height: var(--height);
    width: var(--width);
    background-color: var(--divider-color);
  }
</style>
