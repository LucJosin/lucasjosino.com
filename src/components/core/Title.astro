---
interface Props {
  title: string;
  margin?: string;
  fontSize?: string;
}

const { title, margin = '1rem 0', fontSize = '0.9em 0' } = Astro.props as Props;
---

<h1 class="title">
  {title}
</h1>

<style define:vars={{ margin, fontSize }}>
  .title {
    margin: var(--margin);
    font-size: var(--fontSize);
    font-weight: bold;
  }
</style>
