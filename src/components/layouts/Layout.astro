---
import headConfig from '@constants/head';

export interface Props {
  title: string;
  description: string;
  icon?: string;
  banner?: string;
  robots?: string;
  shortlink?: string;
}

const { title, description, icon, banner, robots, shortlink } =
  Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Configurations -->
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta http-equiv="content-language" content="en-US" />
    <meta http-equiv="content-type" content="text/html" />

    <!-- Default  -->
    <meta name="copyright" content={headConfig.copyRight} />
    <meta
      name="description"
      content={description + headConfig.endDescription}
    />
    <meta name="author" content={headConfig.name} />
    <meta name="tags" content={headConfig.tags} />
    <meta name="keywords" content={headConfig.tags} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content={robots ?? headConfig.robots} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:creator" content={headConfig.social} />
    <meta name="twitter:site" content={headConfig.social} />
    <meta name="twitter:domain" content={Astro.url} />
    <meta name="twitter:title" content={headConfig.titleStart + title} />
    <meta
      name="twitter:description"
      property="og:description"
      itemprop="description"
      content={description + headConfig.endDescription}
    />
    <meta
      property="twitter:image"
      itemprop="image primaryImageOfPage"
      content={banner ?? headConfig.banner}
    />

    <!-- Open Graph -->
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={headConfig.titleStart + title} />
    <meta property="og:site_name" content={headConfig.name} />
    <meta
      property="og:description"
      content={description + headConfig.endDescription}
    />
    <meta property="og:type" content="portfolio" />
    <meta property="og:image" content={banner ?? headConfig.banner} />

    <!-- Links -->
    {shortlink && <link rel="shortlink" type="text/html" href={shortlink} />}
    <link rel="canonical" href={Astro.url} />

    <!-- Icons -->
    <link
      rel="apple-touch-icon"
      href={icon ?? headConfig.icon}
      type="image/jpg"
    />
    <link rel="shortcut icon" type="image/jpg" href={icon ?? headConfig.icon} />
    <link rel="icon" type="image/jpg" href={icon ?? headConfig.icon} />

    <!-- Astro -->
    <meta name="generator" content={Astro.generator} />

    <!-- Title -->
    <title>{headConfig.titleStart + title}</title>
  </head>
  <body>
    <slot />
    <style>
      :root {
        /* Global */
        --primary-color: #f0f0f0;
        --secondary-color: #dfdfdd;

        --contrast-color: #000;

        --divider-color: #000;
        --divider-height: 1px;
        --divider-width: 1rem;
        --divider-size: 1px;
        --divider-margin: 1.5rem 0;

        --border-color: #000;
        --border-size: 1px;

        --text-color: #000;
        --text-color-inv: #fff;

        /* Border radius */
        --border-radius: 10px;
        --layout-border-radius: 20px;

        /* Transition */
        --transition-duration: 0.4s;

        /* LinkBox (default) */
        --link-box-height: 3.1rem;
        --link-box-width: 11.2rem;

        /* LinkBox (social) */
        --social-lb-height: 4.3rem;
        --social-lb-width: 5rem;

        /* LinkBox (project) */
        --project-lb-height: 8.75rem;
        --project-lb-width: 11.2rem;
      }

      @media (prefers-color-scheme: dark) {
        :root {
          --primary-color: #191919;
          --secondary-color: #151515;

          --contrast-color: #fff;

          --divider-color: #fff;

          --border-color: #fff;

          --text-color: #fff;
          --text-color-inv: #121212;
        }
      }

      html,
      body {
        padding: 0;
        margin: 0;
        font-family:
          -apple-system,
          BlinkMacSystemFont,
          Segoe UI,
          Roboto,
          Oxygen,
          Ubuntu,
          Cantarell,
          Fira Sans,
          Droid Sans,
          Helvetica Neue,
          sans-serif;
        overflow-x: hidden;
        background-color: var(--primary-color);
        color: var(--text-color);
      }

      * {
        box-sizing: border-box;
      }

      :global([astro-icon]) {
        fill: var(--text-color);
        color: var(--text-color);
        transition: all var(--transition-duration);
      }

      :global(a) {
        color: var(--text-color);
        text-decoration: none;
      }

      :global(p) {
        margin-block-start: 0;
        margin-block-end: 0;
        margin-inline-start: 0;
        margin-inline-end: 0;
      }

      :global(h1) {
        margin-block-start: 0;
        margin-block-end: 0;
        margin-inline-start: 0;
        margin-inline-end: 0;
      }

      :global(code) {
        font-family:
          Menlo,
          Monaco,
          Lucida Console,
          Liberation Mono,
          DejaVu Sans Mono,
          Bitstream Vera Sans Mono,
          Courier New,
          monospace;
      }
    </style>
  </body>
</html>
