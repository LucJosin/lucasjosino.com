---
import Divider from '@components/core/Divider.astro';
import ProjectItem from '@components/core/ProjectItem.astro';
import Title from '@components/core/Title.astro';
import Container from '@components/data/Container.astro';
import { projects } from '@constants/projects';
import Layout from '@layouts/Layout.astro';
---

<Layout
  title="Projects"
  description="A showcase of all projects that have I have completed. Using tools/languages like Astro, Java, Spring Boot, Typescript, etc.. "
  shortlink="/p"
>
  <Container>
    <Title title="Projects" fontSize="2.5em" />
    <Divider height="1px" width="80%" />

    <div class="projects-container">
      {
        projects.map((data) => (
          <ProjectItem project={data} titleSize="1.2em" descSize="1em" />
        ))
      }
    </div>
  </Container>
</Layout>

<style>
  .profile {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.2rem;
  }

  .projects-container {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
</style>
