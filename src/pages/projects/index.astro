---
import Description from '@components/core/Description.astro';
import Divider from '@components/core/Divider.astro';
import ProjectCard from '@components/core/Project/ProjectCard.astro';
import Title from '@components/core/Title.astro';
import Container from '@components/data/Container.astro';
import { projects } from '@constants/projects';
import Layout from '@layouts/Layout.astro';
import Navigation from '@layouts/Navigation.astro';
---

<Layout
  title="Projects"
  description="A showcase of all projects that have I have completed. Using tools/languages like Astro, Java, Spring Boot, Typescript, etc.."
  shortlink="/projects"
>
  <Container>
    <Navigation backAlt="See all posts" backHref="/blog/" backTitle="Blog" />
    <Title title="Projects" fontSize="2.5em" />
    <Description
      value="A showcase of all projects that have I have completed. Using tools/languages like Astro, Java, Spring Boot, Typescript, etc.."
      margin="0"
      width="80%"
    />
    <Divider height="1px" width="80%" />

    <div class="projects-list">
      {
        projects.map((data) => (
          <ProjectCard project={data} titleSize="1.2em" descSize="1em" />
        ))
      }
    </div>
  </Container>
</Layout>

<style>
  .profile {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.2rem;
  }

  .projects-list {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
</style>
