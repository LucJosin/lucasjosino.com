---
import Divider from '@components/core/Divider.astro';
import Link from '@components/core/Link/Link.astro';
import ProjectCard from '@components/core/Project/ProjectCard.astro';
import Title from '@components/core/Title.astro';
import Container from '@components/data/Container.astro';
import { projects } from '@constants/projects';
import Layout from '@layouts/Layout.astro';
---

<Layout
  title="Projects"
  description="A showcase of all projects that have I have completed. Using tools/languages like Astro, Java, Spring Boot, Typescript, etc.."
  shortlink="/projects"
>
  <Container>
    <span>
      <Link title="Blog" href="/blog" alt="See blog" /> â€¢
      <Link title="Lucas Josino" href="/" alt="Homepage" />
    </span>
    <Title title="Projects" fontSize="2.5em" />
    <Divider height="1px" width="80%" />

    <div class="projects">
      {
        projects.map((data) => (
          <ProjectCard project={data} titleSize="1.2em" descSize="1em" />
        ))
      }
    </div>
  </Container>
</Layout>

<style>
  .profile {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.2rem;
  }

  .projects {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
</style>
