---
import Background from '@components/core/Background.astro';
import MenuContainer from '@components/data/MenuContainer.astro';
import Layout from '@components/layouts/Layout.astro';
---

<Layout
  title="Lucjos.in"
  description="Lucjos.in is the Lucas Josino URL shortener. "
>
  <main>
    <MenuContainer className="menu-index">
      <h1 class="textPage">Lucjos.in</h1>

      <p class="description">
        Lucjos.in is the <a href="/" class="contact-link link-home"
          >Lucas Josino
        </a>
         URL shortener.
      </p>
      <p class="contact">
        Any problem? Please contact: <a
          href="mailto:contact@lucasjosino.com"
          class="contact-link"
          >contact@lucasjosino.com
        </a>
      </p>
    </MenuContainer>

    <Background />
  </main>
</Layout>

<style>
  main {
    height: 100vh;
    min-height: 100vh;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .menu-index {
    z-index: 1;
    position: relative;
  }

  .textPage {
    font-size: 5em;
  }

  .description {
    text-align: center;
    margin: 1rem;
  }

  .contact {
    width: fit-content;
    position: absolute;
    bottom: 1rem;
    font-size: 0.8em;
    text-align: center;
  }

  .link-home {
    font-weight: bold;
  }

  .contact-link {
    border-bottom: 1px solid transparent;
    transition: var(--transition-duration);
  }

  .contact-link:hover {
    border-bottom: 1px solid var(--contrast-color);
  }

  @media (max-width: 415px) {
    .textPage {
      font-size: 3em;
    }

    .contact {
      font-size: 0.7em;
    }
  }
</style>
