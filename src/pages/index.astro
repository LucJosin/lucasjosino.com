---
import Avatar from '@components/core/Avatar.astro';
import Background from '@components/core/Background.astro';
import Layout from '@components/layouts/Layout.astro';
import Menu from '@components/layouts/Menu.astro';
---

<Layout
  title="Developer"
  description="Hi!, I'm Lucas Josino. A Mobile Developer. Welcome to my world! "
>
  <main>
    <div class="container">
      <Avatar />
      <Menu />
    </div>
    <Background />
    <!-- <a
      href="https://www.freepik.com/vectors/matrix"
      class="credits"
      target="_blank"
      >Matrix vector created by starline - www.freepik.com
    </a> -->
  </main>
</Layout>

<style>
  main {
    height: 100vh;
    min-height: 100vh;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .container {
    z-index: 2;
    display: inherit;
    flex-direction: inherit;
    align-items: inherit;
    justify-content: inherit;
  }

  .credits {
    z-index: 1;
    position: absolute;
    bottom: 0.5rem;
    opacity: 0.4;
    font-size: 0.7em;
  }

  @media (prefers-color-scheme: light) {
    .credits {
      opacity: 0.8;
      color: var(--primary-color);
    }
  }
</style>
