---
import Avatar from '@components/Avatar.astro';
import Background from '@components/Background.astro';
import Layout from '@layouts/Layout.astro';
import Menu from '@layouts/Menu.astro';
---

<Layout
  title="Developer"
  description="Hi!, I'm Lucas Josino. A Mobile Developer. Welcome to my world! "
>
  <main>
    <div class="container">
      <Avatar />
      <Menu />
    </div>
    <Background />
  </main>
</Layout>

<style>
  main {
    height: 100vh;
    min-height: 100vh;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .container {
    z-index: 2;
    display: inherit;
    flex-direction: inherit;
    align-items: inherit;
    justify-content: inherit;
  }
</style>
