---
import Avatar from '@components/core/Avatar.astro';
import Background from '@components/core/Background.astro';
import Layout from '@components/layouts/Layout.astro';
import Menu from '@components/layouts/Menu.astro';
---

<Layout
  title="Developer"
  description="Hi!, I'm Lucas Josino. A Mobile Developer. Welcome to my world! "
>
  <main>
    <div class="container">
      <Avatar />
      <Menu />
    </div>
    <Background />
    <span class="credits">
      Designed and built by
      <a href="https://github.com/LucJosin" target="_blank" class="credits-link"
        >Lucas Josino
      </a>
      |
      <a
        href="https://github.com/LucJosin/lucasjosino.com"
        target="_blank"
        class="credits-link"
        >Source
      </a>
    </span>
  </main>
</Layout>

<style>
  main {
    height: 100vh;
    min-height: 100vh;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .container {
    z-index: 2;
    display: inherit;
    flex-direction: inherit;
    align-items: inherit;
    justify-content: inherit;
  }

  .credits {
    z-index: 1;
    position: absolute;
    bottom: 0.5rem;
    opacity: 0.6;
    font-size: 0.7em;
  }

  .credits-link {
    color: var(--color-text);
    border-bottom: 1px solid transparent;
  }

  .credits-link:hover {
    border-bottom: 1px solid var(--border-color);
  }

  @media (prefers-color-scheme: light) {
    .credits-link {
      color: var(--primary-color);
      border-bottom: 1px solid transparent;
    }

    .credits {
      opacity: 1;
      color: var(--primary-color);
    }

    .credits-link:hover {
      border-bottom: 1px solid var(--primary-color);
    }
  }
</style>
